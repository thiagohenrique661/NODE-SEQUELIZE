<h1>USERS</h1>

<div class="container">
    {{#each users}}
    <div class="item">
        <h2>{{this.name}}</h2>
        <p>{{this.occupation}}</p>
        <div class="actions">
            <a href="/users/ {{this.id}}" class="details-btn">DETAILS</a>
            <a href="/users/edit/{{this.id}}" class="edit-btn">EDIT USER</a>
            <form action="/users/delete/{{this.id}}" method="POST">
             <input type="submit" value="DELETE" class="delete-btn">
             </form>
        </div>
    </div>
    {{/each}}
</div>