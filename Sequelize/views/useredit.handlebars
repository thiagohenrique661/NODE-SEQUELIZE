<h1>EDIT USER: {{user.name}}</h1>

<form action="/users/update" method="POST" class="form">
    <input type="hidden" name="id" value="{{user.id}}">
    <div class="form-control">
        <label for="name">Name:</label>
        <input type="text" name="name" placeholder="Type it your name">
    </div>
    
    <div class="form-control">
        <label for="occupation">occupation</label>
        <input type="text" name="occupation" placeholder="Type it your occupation">
    </div>

    <div class="form-control form-checkbox">
        {{#if user.newsletter}}
        <input type="checkbox" name="newsletter" checked>
        {{else}}
        <input type="checkbox" name="newsletter" checked>
        {{/if}}
        <label for="checkbox" name="newsletter" checked>To send promotion</label>
    </div>

 
    <input type="submit" value="Submit" class="submit-btn">
</form>